<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:padding="10dp"
    android:id="@+id/my_bottom_sheet"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background">

<View
android:id="@+id/view"
android:layout_width="50dp"
    android:layout_height="3dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/gray_btn_backround" />

<TextView
android:id="@+id/solo_lists_bottom_sheet_title"
android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/add_to_play_list_text"
    android:textColor="@color/Background"
    android:textStyle="bold"
    android:textSize="20dp"
    android:layout_below="@+id/view" />

<androidx.recyclerview.widget.RecyclerView
android:id="@+id/landscape_solo_lists_bottom_sheet_playLists_RV"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:layout_below="@+id/solo_lists_bottom_sheet_title"/>
    </RelativeLayout>
