<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bottom_sheet_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/view"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gray_btn_backround" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/video_details_bottom_sheet_custom_image"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_below="@+id/view"
        android:scaleType="centerCrop"
        android:layout_marginTop="15dp"
        android:src="@drawable/small_place_holder_image"
        app:shapeAppearanceOverlay="@style/RoundedCorner20dp" />
    <TextView
        android:id="@+id/video_details_bottom_sheet_custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_details_bottom_sheet_custom_image"
        android:layout_alignTop="@+id/video_details_bottom_sheet_custom_image"
        android:text="lkqsklq"
        android:textColor="@color/Background"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="5dp"
        android:textSize="18sp"
        android:ellipsize="end"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/video_details_bottom_sheet_custom_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/video_details_bottom_sheet_custom_image"
        android:text="lkqsklq"
        android:layout_alignBottom="@+id/video_details_bottom_sheet_custom_image"
        android:layout_below="@+id/video_details_bottom_sheet_custom_title"
        android:textColor="@color/gray"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:layout_marginStart="5dp"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/video_details_bottom_sheet_custom_edit_video_btn"
        />
    <ImageView
        android:id="@+id/video_details_bottom_sheet_custom_edit_video_btn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@drawable/items_background_selector"
        android:padding="7dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignBottom="@+id/video_details_bottom_sheet_custom_duration"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/video_details_bottom_sheet_custom_title"
        android:src="@drawable/edit" />
    <LinearLayout
        android:id="@+id/video_share_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@id/video_details_bottom_sheet_custom_image"
        android:background="@drawable/items_background_selector"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/share"
            android:padding="2dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/share_text"
            android:gravity="center_vertical"
            android:textColor="@color/Background"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_light"
            android:includeFontPadding="false"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/video_floating_windoow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_below="@id/video_share_layout"
        android:background="@drawable/items_background_selector"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mini_display"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/floating_window_text"
            android:gravity="center_vertical"
            android:textColor="@color/Background"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_light"
            android:includeFontPadding="false"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/video_floating_windoow_layout"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/gray_btn_backround" />
    <LinearLayout
        android:id="@+id/video_play_mode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:layout_below="@id/view_line"
        android:background="@drawable/items_background_selector"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/gray_repeat"
            android:padding="2dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/floating_window_text"
            android:gravity="center_vertical"
            android:textColor="@color/Background"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_light"
            android:includeFontPadding="false"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_hide_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:background="@drawable/items_background_selector"
        android:layout_below="@id/video_play_mode_layout"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:src="@drawable/unhide_eye"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hide_text"
            android:gravity="center_vertical"
            android:textColor="@color/Background"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_light"
            android:includeFontPadding="false"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/delete_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:background="@drawable/items_background_selector"
        android:layout_below="@id/video_hide_layout"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"

            android:src="@drawable/trash"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/delete_from_app_text"
            android:gravity="center_vertical"
            android:textColor="@color/Background"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_light"
            android:includeFontPadding="false"
            android:layout_marginStart="5dp"/>
    </LinearLayout>



</RelativeLayout>