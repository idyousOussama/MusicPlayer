<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:padding="10dp"
    android:background="@drawable/song_notification_backround"
    android:layout_marginStart="7dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="7dp"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/album_Image_card"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/Accent"
        app:cardCornerRadius="20dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/album_Image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/small_place_holder_image" />

    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/album_Image_card"
    android:layout_marginStart="10dp"
    android:orientation="vertical"
    android:layout_toLeftOf="@+id/album_songNum"
    android:layout_centerVertical="true"
    >
    <TextView
    android:id="@+id/album_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/poppins_semibold"
    android:text="Album Name"
    android:includeFontPadding="false"
    android:textColor="@color/Primary"
    android:textSize="25sp"
    android:maxLines="1"
    android:ellipsize="end"
    android:maxWidth="230dp"
    android:textStyle="bold" />
    <TextView
        android:id="@+id/album_song_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extralight"
        android:text="Album Name"
        android:includeFontPadding="false"
        android:textColor="@color/Primary"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="230dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/song_symbol_icon"
         />
    <TextView
        android:id="@+id/album_song_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extralight"
        android:text="Album Name"
        android:includeFontPadding="false"
        android:textColor="@color/Primary"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="230dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/song_symbol_icon"
        />
</LinearLayout>



    <TextView
        android:id="@+id/album_songNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
android:layout_alignParentRight="true"
        android:fontFamily="@font/poppins_extralight"
        android:text="100"
        android:padding="5dp"
        android:background="@drawable/white_background"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:textColor="@color/Primary"
         />




</RelativeLayout>