<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".Activities.Vedios.VideoAlbums">


    <ImageView
        android:id="@+id/video_albums_back_Btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/items_background_selector"
        android:src="@drawable/arrow_left"/>
    <TextView
        android:id="@+id/video_albums_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textColor="@color/Background"
        android:text="@string/videos_Albums_text"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:layout_marginStart="5dp"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/video_albums_back_Btn"
        android:layout_alignTop="@+id/video_albums_back_Btn"
        android:layout_alignBottom="@+id/video_albums_back_Btn"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/video_albums_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/video_albums_back_Btn"
        />

</RelativeLayout>