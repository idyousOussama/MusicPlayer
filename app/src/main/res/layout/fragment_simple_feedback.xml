<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Fragments.FeedbackFragments.SimpleFeedbackFragment">


    <TextView
        android:id="@+id/simple_feedback_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_text"
        android:textColor="@color/Background"
        android:textSize="20sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_semibold"/>
    <EditText
        android:id="@+id/simple_explain_inpute"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:background="@drawable/stroke_white_background"
        android:padding="15dp"
        android:maxLength="500"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:fontFamily="@font/poppins"
        android:gravity="top|left"
        android:textSize="15sp"
        android:hint="@string/feed_back_details_hint_text"/>



</LinearLayout>