<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
android:padding="10dp"
android:layout_margin="5dp"
    android:background="@drawable/song_notification_backround"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/music_custom_image"
        android:layout_width="141dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/small_place_holder_image"
        app:shapeAppearanceOverlay="@style/RoundedCorner20dp" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
       android:layout_below="@+id/music_custom_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/custom_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:text="Music "
            android:paddingTop="5dp"
            android:textColor="@color/Primary"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/custom_music_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_extralight"
            android:text="Music "
            android:maxLines="1"
            android:textColor="@color/Primary"
            android:paddingTop="5dp"
            />


    </LinearLayout>


</RelativeLayout>