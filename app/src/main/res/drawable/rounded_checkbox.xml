<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#FF6200EE" /> <!-- Customize the checked color -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#FF6200EE" /> <!-- Customize the border color -->
            <solid android:color="#FFFFFF" /> <!-- Customize the unchecked background color -->
        </shape>
    </item>
</selector>
